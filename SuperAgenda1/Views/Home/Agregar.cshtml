@model SuperAgenda1.Models.Contactos
@{ }


<a href="/Home" class="btn btn-primary">Volver</a>

<div class="container">
    <form method="Post" action="/Home/Agregar" class="Form-horizontal">
        <input type="hidden" name="Id" id="Id"/>
        <div class="form-group">
            <label class="col-2">Nombres</label>
            <div class="col-lg-4">
                <input type="text" name="Nombres" class="form-control"/>
            </div>
            <label class="col-2">Apellidos</label>
            <div class="col-lg-4">
                <input type="text" name="Apellidos" class="form-control"/>
            </div>
            <label class="col-2">TelefonoCasa</label>
            <div class="col-lg-4">
                <input type="text" name="TelefonoCasa" class="form-control"/>
            </div>
            <label class="col-2">Movil</label>
            <div class="col-lg-4">
                <input type="text" name="TelefonoMovil" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-2">Tipo De Contacto</label>
            <div class="col-4">
                @Html.DropDownListFor(a => a.TipoContacto, Html.GetEnumSelectList<SuperAgenda1.Models.TipoContacto>(), new { @class = "form-control" })
            </div>
        </div>
        <button type="submit" class="btn btn-success"> Guardar contacto </button>

    </form>
</div>